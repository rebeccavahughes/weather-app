<h1>5 Day Forecast</h1>

<div class="inputBox">
<form action="/" method="POST">
<input type="text" name="location">
<div class="button">
<input type="submit" value="Add City">
</div>
</form>
</div>

<div class="result">
{{#if err}}
    <h3>{{err}}</h3>
{{else}}
<ul>
    {{#each data}}
    <li>{{@key}} : {{this}}</li>
    {{/each}}
</ul>
{{/if}}
</div>

