<h1>5 Day Forecast{{city}}</h1>

<div class="inputBox">
<form action="/fivedays" method="POST">
<label for="location">Location:</label>
<input type="text" name="location">
<br>
<label for="countryCode">Country:</label>
<input type="text" name="countryCode">
<div class="button">
<input type="submit" value="Add City">
</div>
</form>
</div>

<div class="result">
{{#if err}}
    <h3>{{err}}</h3>
{{else}}
<ul>
    {{#each data}}
    <li>{{@key}} : {{this}}</li>
    {{/each}}
</ul>
{{/if}}
</div>

